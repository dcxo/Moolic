<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Obwei" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/Obwei.TextAppearance</item>

        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>

    </style>

    <style name="Obwei.TextAppearance">
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="Obwei.TextAppearance.Headline1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Obwei.TextAppearance.Headline2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Obwei.TextAppearance.Headline3">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
